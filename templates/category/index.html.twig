{% extends 'base.html.twig' %}

{% block title %}Listes des catégories{% endblock %}

{% block body %}
    <h1>Listes des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de plat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
        <a href="{{ path('category_new') }}">Créer nouveau</a>

{% endblock %}
